<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextPersonName16"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Enter Subject Name:"
        android:inputType="textPersonName"
        android:textColorHint="#252323"
        android:gravity="center"
        android:layout_margin="11dp"
         />

    <EditText
        android:id="@+id/editTextTextPersonName17"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="No. of Lectures to take:"
        android:inputType="textPersonName"
        android:textColorHint="#252323"
        android:gravity="center"
        android:layout_margin="11dp"
        />

    <EditText
        android:id="@+id/editTextTextPersonName18"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="No. of Practicals to take:"
        android:inputType="textPersonName"
        android:textColorHint="#252323"
        android:gravity="center"
        android:layout_margin="11dp"
       />

    <Button
        android:id="@+id/button8"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="11dp"
        android:gravity="center"
        android:text="Add" />

    <Button
        android:id="@+id/button9"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="11dp"
        android:gravity="center"
        android:text="Proceed" />
</LinearLayout>